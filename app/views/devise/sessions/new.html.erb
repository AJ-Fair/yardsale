<div id="devise-log-in">
  <h2>Log in to YardSale!</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => "grid-x" }) do |f| %>

    <div class="cell small-12 medium-6 large-6">

      <div class="field">
        <%= f.label :email, 'Enter your email:' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, 'Enter your password:' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in to YardSale", :id => 'button' %>
      </div>

    </div>

    <div class="cell small-12 medium-6 large-6">

      <%= render "devise/shared/links" %>

    </div>
  <% end %>

</div>
