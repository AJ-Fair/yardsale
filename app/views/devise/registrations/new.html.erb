<div id="devise-log-in">
  <h2>Create Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "grid-x" }) do |f| %>

    <div class="cell small-12 medium-6 large-6">

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class="cell small-12 medium-6 large-6">

      <div class="field">
        <%= f.label :user_name %>
        <%= f.text_field :user_name %>
      </div>

      <div class="field">
        <%= f.label :blurb, "Write a blurb for your profile" %>
        <%= f.text_area :blurb %>
      </div>

      <div class="field">
        <%= f.label :profile_photo, "Click here to upload a profile picture", :class => "file"%>
        <%= f.file_field :profile_photo %>
      </div>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="actions">
        <%= f.submit "Create your new account", :id => 'button' %>
      </div>

    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
