<div id="admin-user-show">

  <h1><a href=<%= "../../users/#{@user.id}" %>><%= @user.user_name %></a>'s Content</h1>

  <div class="user-items">
    <% @user.items.each do |item| %>

      <div class="item">
        <div class="pic+name">
          <a href=<%= "../../items/#{item.id}" %>>
            <img src=<%= item.image %>></img>
          </a>

          <h3>
            <a href=<%= "../../items/#{item.id}" %>><%= item.name %></a>
          </h3>

          <div class="item-delete">
            <%= button_to "Delete Item",
              admin_item_path(:id => item.id),
              :method => :delete,
              :class=> "button"
            %>
          </div>
        </div>

        <div class="description">
          <h4>
            <a href=<%= "../../items/#{item.id}" %>><%= item.description %></a>
          </h4>
        </div>
      </div>

    <% end %>
  </div>
  <br />
  <div class="user-comments">
    <% @user.comments.each do |comment| %>
      <div class="comment">
        <h3>On <a href=<%= "../../users/#{comment.item.user.id}" %>><%= comment.item.user.user_name %></a>'s item: '<a href=<%= "../../items/#{comment.item.id}" %>><%= comment.item.name %></a>' ...</h3>

        <div class="comment-delete">
          <%= button_to "Delete Comment",
          admin_comment_path(:id => comment.id),
          :method => :delete,
          :class=> "button"
          %>
        </div>

        <h4>
          <a href=<%= "../../items/#{comment.item.id}" %>>
            "<%= comment.body %>"
          </a>
        </h4>

      </div>

    <% end %>
  </div>

</div>
