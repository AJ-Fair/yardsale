<div id=admin-page>
  <h1>Admin's page</h1>

  <div class="users">
    <% @users.each do |user| %>

      <div class="user">

        <div class="user-thumbnail">
          <a href=<%= "/users/#{user.id}" %>>
            <img src=<%= user.profile_photo %>></img>
          </a>
        </div>

        <div class="user-name">
          <h4>
            <a href=<%= "/users/#{user.id}" %>><%= user.user_name %></a>
          </h4>
        </div>

        <div class="buttons">

          <% if !user.admin? %>
            <div class="user-toggle-admin">
              <%= button_to "Upgrade to admin",
                admin_user_path(:id => user.id),
                :method => :patch,
                :class=> "button"
              %>
            </div>
          <% else %>
            <div class="user-toggle-member">
              <%= button_to "Downgrade admin",
                admin_user_path(:id => user.id),
                :method => :patch,
                :class=> "button"
              %>
            </div>
          <% end %>

          <div class="user-content">
            <%= link_to "Review User Content",
              admin_user_path(:id => user.id),
              :method => :get,
              :class=> "button"
            %>
          </div>

          <div class="user-delete">
            <%= button_to "Delete User Account",
              admin_user_path(:id => user.id),
              :method => :delete,
              :class=> "button"
            %>
          </div>
          
        </div>

      </div>

    <% end %>
  </div>

</div>
